<webscript>
	<shortname>side ticket validator</shortname>
	<description><![CDATA[
This service is used to validate ticket<br/>
<br/>
Parameters :<br/>
userName	: user name to use
userpwd		: user password (optional if userTicket filled)
userTicket	: the authenticate ticket for this user

Exemples :
com/bluexml/side/facetMap/ticketValidation?userName=admin&userpwd=admin
]]>
  </description>
	<url>/com/bluexml/side/facetMap/ticketValidation?userName={userName}&amp;userpwd={password}&amp;userTicket={ticket}</url>
	<authentication>guest</authentication>
	<transaction allow="readonly" />
	<format default="json" />
	<family>SIDE</family>
</webscript>
