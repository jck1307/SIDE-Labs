rule reqDefs {
    from s : RWM!RequirementsDefinition
    to t : RISK!Diagnostic (
        estimation <- RISK!Estimation->allInstances()
    )
}

rule goal {
    from s : RWM!Goal
    to t : RISK!Estimation (
        elementName <- s.name,
        elementType <- 'Goal',
        value <- s.unitaryRiskV2
    )
}

rule entity {
    from s : RWM!Entity
    to t : RISK!Estimation (
        elementName <- s.name,
        elementType <- 'Entity',
        value <- s.risk
    )
}

rule agent {
    from s : RWM!Agent
    to t : RISK!Estimation (
        elementName <- s.name,
        elementType <- 'Agent',
        value <- s.risk
    )
}